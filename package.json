{
  "name": "imagemin-on-aww-lambda",
  "version": "1.0.0",
  "description": "Optimize images with imagemin on S3 using AWS Lambda",
  "main": "src/index.js",
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit",
    "files": [
      "test/**/*.test.js"
    ]
  },
  "babel": {
    "presets": [
      "@ava/stage-4",
      "es2017",
      "es2016",
      "es2015",
      "stage-0"
    ]
  },
  "license": "MIT",
  "files": [
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:zeroasterisk/optim.git"
  },
  "author": "Alan Blount <alan@zeroasterisk.com>",
  "scripts": {
    "transpile": "babel --presets es2015 src --out-dir bin",
    "create": "npm run transpile && claudia create --no-optional-dependencies",
    "update": "npm run transpile && claudia update --no-optional-dependencies",
    "release": "claudia set-version --version production",
    "test-lambda": "npm run transpile && claudia test-lambda --event ./test/event.json",
    "clean": "rm -fr bin && rm -fr bin.zip",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "npm run lint && nyc --reporter=text ava",
    "test:watch": "ava --watch"
  },
  "dependencies": {
    "async": "^2.1.5",
    "babel-polyfill": "^6.23.0",
    "file-type": "^4.1.0",
    "gm": "^1.23.0",
    "imagemin": "^5.2.2",
    "imagemin-gifsicle": "^5.1.0",
    "imagemin-guetzli": "^0.1.5",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-optipng": "^5.2.1",
    "imagemin-pngquant": "^5.0.0",
    "imagemin-svgo": "^5.2.0",
    "imagemin-webp": "^4.0.0"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.24.0",
    "claudia": "^2.9.0",
    "nyc": "^10.1.2"
  },
  "optionalDependencies": {
    "aws-sdk": "^2.28.0",
    "imagemagick": "^0.1.3"
  }
}
